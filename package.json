{
  "name": "talent-hub",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "create-env": "node scripts/create-env.js",
    "generate": "cd backend && npx prisma generate && npx prisma db push",
    "generate:force": "cd backend && npx prisma generate && npx prisma db push --accept-data-loss",
    "deploy": "npm run build && npm run pm2:start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
